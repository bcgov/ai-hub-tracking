{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "enabledManagers": ["terraform", "regex"],
  "regexManagers": [
    {
      "fileMatch": ["^infra/modules/self-hosted-runner-vm/variables\\.tf$"],
      "matchStrings": [
        "variable \\\"github_actions_runner_version\\\"[\\s\\S]*?default\\s*=\\s*\\\"(?<currentValue>[^\\\"]+)\\\""
      ],
      "datasourceTemplate": "github-releases",
      "versioningTemplate": "semver",
      "depNameTemplate": "actions/runner"
    },
    {
      "fileMatch": ["^infra/modules/self-hosted-runner-vm/variables\\.tf$"],
      "matchStrings": [
        "variable \\\"terraform_version\\\"[\\s\\S]*?default\\s*=\\s*\\\"(?<currentValue>[^\\\"]+)\\\""
      ],
      "datasourceTemplate": "github-releases",
      "versioningTemplate": "semver",
      "depNameTemplate": "hashicorp/terraform"
    },
    {
      "fileMatch": ["^infra/modules/self-hosted-runner-vm/variables\\.tf$"],
      "matchStrings": [
        "variable \\\"kubectl_version\\\"[\\s\\S]*?default\\s*=\\s*\\\"(?<currentValue>[^\\\"]+)\\\""
      ],
      "datasourceTemplate": "github-releases",
      "versioningTemplate": "semver",
      "depNameTemplate": "kubernetes/kubernetes"
    },
    {
      "fileMatch": ["^infra/modules/self-hosted-runner-vm/variables\\.tf$"],
      "matchStrings": [
        "variable \\\"helm_version\\\"[\\s\\S]*?default\\s*=\\s*\\\"(?<currentValue>[^\\\"]+)\\\""
      ],
      "datasourceTemplate": "github-releases",
      "versioningTemplate": "semver",
      "depNameTemplate": "helm/helm"
    },
    {
      "fileMatch": ["^infra/modules/self-hosted-runner-vm/variables\\.tf$"],
      "matchStrings": [
        "variable \\\"azure_cli_version\\\"[\\s\\S]*?default\\s*=\\s*\\\"(?<currentValue>[^\\\"]+)\\\""
      ],
      "datasourceTemplate": "github-releases",
      "versioningTemplate": "semver",
      "depNameTemplate": "Azure/azure-cli"
    },
    {
      "fileMatch": ["^infra/modules/self-hosted-runner-vm/variables\\.tf$"],
      "matchStrings": [
        "variable \\\"gh_cli_version\\\"[\\s\\S]*?default\\s*=\\s*\\\"(?<currentValue>[^\\\"]+)\\\""
      ],
      "datasourceTemplate": "github-releases",
      "versioningTemplate": "semver",
      "depNameTemplate": "cli/cli"
    }
  ]
}
