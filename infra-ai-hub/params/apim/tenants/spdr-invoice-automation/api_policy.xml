<policies>
    <inbound>
        <base />
        <!-- Tenant identification -->
        <set-header name="X-Tenant-Id" exists-action="override">
            <value>spdr-invoice-automation</value>
        </set-header>

        <!-- ================================================================== -->
        <!-- CONTENT SAFETY OPT-OUT (compile-time configuration)               -->
        <!-- Skip headers are set based on tenant tfvars at deploy time        -->
        <!-- pii_redaction_enabled: ${pii_redaction_enabled}                   -->
        <!-- prompt_shield_enabled: ${prompt_shield_enabled}                   -->
        <!-- ================================================================== -->
%{ if !pii_redaction_enabled ~}
        <!-- PII Redaction is DISABLED for this tenant -->
        <set-header name="X-Skip-PII-Redaction" exists-action="override">
            <value>true</value>
        </set-header>
%{ endif ~}
%{ if !prompt_shield_enabled ~}
        <!-- Prompt Shield is DISABLED for this tenant -->
        <set-header name="X-Skip-Prompt-Shield" exists-action="override">
            <value>true</value>
        </set-header>
%{ endif ~}

        <!-- Token rate limiting: 10,000 TPM per subscription for this tenant -->
        <!-- Protects backend from token exhaustion, returns 429 when exceeded -->
        <llm-token-limit
            counter-key="@(context.Subscription.Id)"
            tokens-per-minute="10000"
            estimate-prompt-tokens="true"
            remaining-tokens-variable-name="remainingTokens"
            remaining-tokens-header-name="x-ratelimit-remaining-tokens"
            tokens-consumed-variable-name="tokensConsumed" />

        <!-- Path-based routing to appropriate backend service -->
        <choose>
            <!-- OpenAI requests: /openai/* -->
            <when condition="@(context.Request.Url.Path.Contains("/openai/"))">
                <set-backend-service backend-id="spdr-invoice-automation-openai" />
                <authentication-managed-identity resource="https://cognitiveservices.azure.com" output-token-variable-name="msi-access-token" ignore-error="false" />
            </when>
            <!-- Document Intelligence requests: /documentintelligence/* or /formrecognizer/* -->
            <when condition="@(context.Request.Url.Path.Contains("/documentintelligence/") || context.Request.Url.Path.Contains("/formrecognizer/"))">
                <set-backend-service backend-id="spdr-invoice-automation-docint" />
                <authentication-managed-identity resource="https://cognitiveservices.azure.com" output-token-variable-name="msi-access-token" ignore-error="false" />
            </when>
            <!-- Storage requests: /storage/* or /blobs/* -->
            <when condition="@(context.Request.Url.Path.Contains("/storage/") || context.Request.Url.Path.Contains("/blobs/"))">
                <set-backend-service backend-id="spdr-invoice-automation-storage" />
                <authentication-managed-identity resource="https://storage.azure.com/" output-token-variable-name="msi-access-token" ignore-error="false" />
            </when>
            <!-- Default: OpenAI backend for all other requests -->
            <otherwise>
                <set-backend-service backend-id="spdr-invoice-automation-openai" />
                <authentication-managed-identity resource="https://cognitiveservices.azure.com" output-token-variable-name="msi-access-token" ignore-error="false" />
            </otherwise>
        </choose>
    </inbound>
    <backend>
        <base />
    </backend>
    <outbound>
        <base />
    </outbound>
    <on-error>
        <base />
    </on-error>
</policies>
